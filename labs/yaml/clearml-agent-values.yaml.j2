clearml:
  # Use chart-generated Secret (donâ€™t set existingAgentk8sglueSecret)
  existingAgentk8sglueSecret: "clearml-credentials"

agentk8sglue:
  # ClearML Server endpoints (these become env vars)
  apiServerUrlReference:  "{{ APIURL }}"
  webServerUrlReference:  "{{ APPURL }}"
  fileServerUrlReference: "{{ FILESURL }}"

  # Queue settings
  queue: default
  createQueueIfNotExists: false

  # Default pod behavior for tasks spawned by the agent
  basePodTemplate:
    nodeSelector:
      role: clearml-worker
    resources:
      requests:
        cpu: "500m"
        memory: "1Gi"
      limits:
        cpu: "2"
        memory: "4Gi"
    volumes:
      - name: cache
        emptyDir: {}
    volumeMounts:
      - name: cache
        mountPath: /root/.cache
